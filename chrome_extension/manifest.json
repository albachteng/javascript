{
    "manifest_version": 2,
    "name": "Focus",
    "version": "1.0",
    "description": "Replaces youtube contents with an image to remind you to get your lazy self back to work!",
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["./main.js"]
        }
    ],
    "icons": 
        {
            "16": "./Focus_Icon.png",
            "48": "./Focus_Icon.png",
            "128": "./Focus_Icon.png"
        }
}